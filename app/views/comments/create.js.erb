
<% publish_to "/questions/#{@comment.commentable_id}/comments" do %>
// ниже проверка
// если commentable_type = Question то это комментарий к вопросу, иначе к ответу
  <% if  @comment.commentable_type == 'Question' %>
  $('.question>.comments').append('<%= @comment.body %>');
  <% else %>
  var commentable = $('[data-<%= @comment.commentable_type.downcase %>=<%= @comment.commentable_id %>]');
  commentable.find('.comments').append('<%= @comment.body %>');
  <% end %>
<% end %>